generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  stocks      Stock[] // Relasi ke tabel Stock

  @@map("products")
}

model Supplier {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  contact String?
  stocks  Stock[] // Relasi ke tabel Stock

  @@map("suppliers")
}

model Stock {
  id          Int      @id @default(autoincrement())
  productId   Int
  supplierId  Int
  quantity    Int      @default(0) // Jumlah stok barang
  lastUpdated DateTime @default(now()) @updatedAt // Timestamp pembaruan terakhir

  product  Product  @relation(fields: [productId], references: [id])
  supplier Supplier @relation(fields: [supplierId], references: [id])

  @@unique([productId, supplierId]) // Memastikan kombinasi produk-supplier unik
  @@map("stocks")
}
